<Window x:Class="AdvancedWPFGrid.Export.UI.ExportProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exporting Data..." Height="150" Width="350"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStyle="None"
        BorderBrush="{DynamicResource FluentBorderBrush}"
        BorderThickness="1"
        Background="{DynamicResource FluentSurfaceBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Exporting... Please wait" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15" HorizontalAlignment="Center"/>
        
        <ProgressBar x:Name="ExportProgressBar" Grid.Row="1" Height="8" Minimum="0" Maximum="100"/>
        
        <TextBlock x:Name="ProgressText" Grid.Row="2" Text="0%" HorizontalAlignment="Right" Margin="0,5,0,0" FontSize="11" Foreground="{DynamicResource FluentTextSecondaryBrush}"/>
    </Grid>
</Window>
