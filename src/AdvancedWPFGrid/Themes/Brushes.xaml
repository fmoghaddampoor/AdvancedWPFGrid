<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <!-- Fluent Design Colors - Light Theme -->
    <Color x:Key="FluentAccentColor">#0078D4</Color>
    <Color x:Key="FluentAccentLightColor">#429CE3</Color>
    <Color x:Key="FluentAccentDarkColor">#005A9E</Color>
    
    <!-- Background Colors -->
    <Color x:Key="FluentBackgroundColor">#FFFFFF</Color>
    <Color x:Key="FluentBackgroundAltColor">#F3F3F3</Color>
    <Color x:Key="FluentBackgroundHoverColor">#E5E5E5</Color>
    <Color x:Key="FluentBackgroundSelectedColor">#EBF4FC</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="FluentSurfaceColor">#FFFFFF</Color>
    <Color x:Key="FluentSurfaceAltColor">#FAFAFA</Color>
    <Color x:Key="FluentCardColor">#FFFFFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="FluentBorderColor">#E0E0E0</Color>
    <Color x:Key="FluentBorderBrightColor">#D0D0D0</Color>
    <Color x:Key="FluentBorderSubtleColor">#F0F0F0</Color>
    
    <!-- Text Colors -->
    <Color x:Key="FluentTextPrimaryColor">#000000</Color>
    <Color x:Key="FluentTextSecondaryColor">#666666</Color>
    <Color x:Key="FluentTextDisabledColor">#999999</Color>
    
    <!-- State Colors -->
    <Color x:Key="FluentSuccessColor">#107C10</Color>
    <Color x:Key="FluentWarningColor">#FDE300</Color>
    <Color x:Key="FluentErrorColor">#D13438</Color>
    
    <!-- Reveal Effect Colors -->
    <Color x:Key="FluentRevealLightColor">#0D000000</Color>
    <Color x:Key="FluentRevealBorderColor">#1A000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="FluentAccentBrush" Color="{StaticResource FluentAccentColor}" />
    <SolidColorBrush x:Key="FluentAccentLightBrush" Color="{StaticResource FluentAccentLightColor}" />
    <SolidColorBrush x:Key="FluentAccentDarkBrush" Color="{StaticResource FluentAccentDarkColor}" />
    
    <SolidColorBrush x:Key="FluentBackgroundBrush" Color="{StaticResource FluentBackgroundColor}" />
    <SolidColorBrush x:Key="FluentBackgroundAltBrush" Color="{StaticResource FluentBackgroundAltColor}" />
    <SolidColorBrush x:Key="FluentBackgroundHoverBrush" Color="{StaticResource FluentBackgroundHoverColor}" />
    <SolidColorBrush x:Key="FluentBackgroundSelectedBrush" Color="{StaticResource FluentBackgroundSelectedColor}" />
    
    <SolidColorBrush x:Key="FluentSurfaceBrush" Color="{StaticResource FluentSurfaceColor}" />
    <SolidColorBrush x:Key="FluentSurfaceAltBrush" Color="{StaticResource FluentSurfaceAltColor}" />
    <SolidColorBrush x:Key="FluentCardBrush" Color="{StaticResource FluentCardColor}" />
    
    <SolidColorBrush x:Key="FluentBorderBrush" Color="{StaticResource FluentBorderColor}" />
    <SolidColorBrush x:Key="FluentBorderBrightBrush" Color="{StaticResource FluentBorderBrightColor}" />
    <SolidColorBrush x:Key="FluentBorderSubtleBrush" Color="{StaticResource FluentBorderSubtleColor}" />
    
    <SolidColorBrush x:Key="FluentTextPrimaryBrush" Color="{StaticResource FluentTextPrimaryColor}" />
    <SolidColorBrush x:Key="FluentTextSecondaryBrush" Color="{StaticResource FluentTextSecondaryColor}" />
    <SolidColorBrush x:Key="FluentTextDisabledBrush" Color="{StaticResource FluentTextDisabledColor}" />
    
    <SolidColorBrush x:Key="FluentSuccessBrush" Color="{StaticResource FluentSuccessColor}" />
    <SolidColorBrush x:Key="FluentWarningBrush" Color="{StaticResource FluentWarningColor}" />
    <SolidColorBrush x:Key="FluentErrorBrush" Color="{StaticResource FluentErrorColor}" />
    
    <SolidColorBrush x:Key="FluentRevealLightBrush" Color="{StaticResource FluentRevealLightColor}" />
    <SolidColorBrush x:Key="FluentRevealBorderBrush" Color="{StaticResource FluentRevealBorderColor}" />

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="FluentAccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource FluentAccentColor}" Offset="0" />
        <GradientStop Color="{StaticResource FluentAccentLightColor}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="FluentHeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F3F3F3" Offset="0" />
        <GradientStop Color="#FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <!-- Acrylic Effect Brush (simulated) -->
    <LinearGradientBrush x:Key="FluentAcrylicBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E0F2F2F2" Offset="0" />
        <GradientStop Color="#D0E6E6E6" Offset="0.5" />
        <GradientStop Color="#E0F2F2F2" Offset="1" />
    </LinearGradientBrush>

    <!-- Grid Specific Brushes (Light Theme overrides) -->
    <SolidColorBrush x:Key="GridBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="GridHeaderBackgroundBrush" Color="#F3F3F3" />
    <SolidColorBrush x:Key="GridRowBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="GridRowAlternateBackgroundBrush" Color="#F9F9F9" />
    <SolidColorBrush x:Key="GridRowHoverBackgroundBrush" Color="#E5F3FF" />
    <SolidColorBrush x:Key="GridRowSelectedBackgroundBrush" Color="#C7E0F4" />
    <SolidColorBrush x:Key="GridRowSelectedInactiveBackgroundBrush" Color="#E0E0E0" />
    <SolidColorBrush x:Key="GridCellBorderBrush" Color="#E0E0E0" />
    <SolidColorBrush x:Key="GridGroupHeaderBackgroundBrush" Color="#F3F3F3" />
    <SolidColorBrush x:Key="GridGroupHeaderLevel1Brush" Color="#ECECEC" />
    <SolidColorBrush x:Key="GridGroupHeaderLevel2Brush" Color="#E6E6E6" />

    <!-- Font Sizes -->
    <system:Double x:Key="FluentFontSizeSmall">11</system:Double>
    <system:Double x:Key="FluentFontSizeNormal">13</system:Double>
    <system:Double x:Key="FluentFontSizeMedium">15</system:Double>
    <system:Double x:Key="FluentFontSizeLarge">18</system:Double>
    <system:Double x:Key="FluentFontSizeHeader">24</system:Double>

    <!-- Corner Radius -->
    <CornerRadius x:Key="FluentCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="FluentCornerRadiusSmall">2</CornerRadius>
    <CornerRadius x:Key="FluentCornerRadiusLarge">8</CornerRadius>

    <!-- Thickness -->
    <Thickness x:Key="FluentBorderThickness">1</Thickness>
    <Thickness x:Key="FluentCellPadding">8,4</Thickness>
    <Thickness x:Key="FluentHeaderPadding">8,6</Thickness>

</ResourceDictionary>
