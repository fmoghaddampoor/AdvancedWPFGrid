<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:AdvancedWPFGrid.Controls"
    xmlns:col="clr-namespace:AdvancedWPFGrid.Columns">

    <!-- AdvancedGrid Style -->
    <Style TargetType="{x:Type controls:AdvancedGrid}">
        <Setter Property="Background" Value="{StaticResource GridBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI, sans-serif" />
        <Setter Property="FontSize" Value="{StaticResource FluentFontSizeNormal}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AdvancedGrid}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource FluentCornerRadius}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Column Headers -->
                            <Border x:Name="PART_HeaderHost"
                                    Grid.Row="0"
                                    Background="{StaticResource GridHeaderBackgroundBrush}"
                                    BorderBrush="{StaticResource FluentBorderSubtleBrush}"
                                    BorderThickness="0,0,0,1">
                                <controls:GridHeaderPresenter x:Name="PART_HeaderPresenter" 
                                                              HorizontalAlignment="Left" />
                            </Border>
                            
                            <!-- Virtualized Content -->
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          Grid.Row="1"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          CanContentScroll="True"
                                          Focusable="False">
                                <controls:VirtualizingGridPanel x:Name="PART_ItemsHost" />
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridRow Style -->
    <Style TargetType="{x:Type controls:GridRow}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource GridCellBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridRow}">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <controls:GridCellsPresenter x:Name="PART_CellsPresenter" 
                                                     HorizontalAlignment="Left" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsAlternate, RelativeSource={RelativeSource Self}}" Value="True" />
                                <Condition Binding="{Binding AlternatingRows, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowAlternateBackgroundBrush}" />
                        </MultiDataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowHoverBackgroundBrush}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowSelectedBackgroundBrush}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="controls:AdvancedGrid.IsGridFocused" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowSelectedInactiveBackgroundBrush}" />
                        </MultiTrigger>
                        <DataTrigger Binding="{Binding HasHorizontalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="RootBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridCell Style -->
    <Style TargetType="{x:Type controls:GridCell}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource GridCellBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="Padding" Value="{StaticResource FluentCellPadding}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridCell}">
                    <Border x:Name="CellBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEditing" Value="True">
                            <Setter TargetName="CellBorder" Property="BorderBrush" 
                                    Value="{StaticResource FluentAccentBrush}" />
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="2" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="CellBorder" Property="BorderBrush" 
                                    Value="{StaticResource FluentAccentBrush}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridHeaderCell Style -->
    <Style TargetType="{x:Type controls:GridHeaderCell}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource GridCellBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="{StaticResource FluentHeaderPadding}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridHeaderCell}">
                    <Grid>
                        <Border x:Name="HeaderBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource FluentBorderBrush}"
                                BorderThickness="0,0,0,2"
                                Padding="12,0,12,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Header Text -->
                                <TextBlock x:Name="HeaderText"
                                           Grid.Column="0"
                                           Text="{TemplateBinding Content}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           TextTrimming="CharacterEllipsis" />

                                <CheckBox x:Name="PART_HeaderSelectionCheckBox"
                                          Grid.Column="0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"
                                          IsThreeState="True"
                                          IsChecked="{Binding SelectionState, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" />
                                
                                <!-- Sort Button (High-Impact SVG) -->
                                <Button x:Name="PART_SortButton"
                                        Grid.Column="1"
                                        Width="24" Height="24"
                                        Margin="4,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="0">
                                                <Path x:Name="SortIndicator"
                                                      Data="M 6,12 L 14,4 L 22,12 M 6,16 L 14,24 L 22,16"
                                                      Stroke="{StaticResource FluentAccentBrush}"
                                                      StrokeThickness="2"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"
                                                      StrokeLineJoin="Round"
                                                      Stretch="Uniform"
                                                      Width="14" Height="18"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SortIndicator" Property="Stroke" Value="#005A9E"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding SortDirection, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="Ascending">
                                                    <Setter TargetName="SortIndicator" Property="Data" Value="M 4,20 L 14,4 L 24,20" />
                                                    <Setter TargetName="SortIndicator" Property="Stroke" Value="{StaticResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortIndicator" Property="Fill" Value="{StaticResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortIndicator" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SortDirection, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="Descending">
                                                    <Setter TargetName="SortIndicator" Property="Data" Value="M 4,8 L 14,24 L 24,8" />
                                                    <Setter TargetName="SortIndicator" Property="Stroke" Value="{StaticResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortIndicator" Property="Fill" Value="{StaticResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortIndicator" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CanSort, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                
                                <!-- Filter Button (High-Impact SVG) -->
                                <Button x:Name="PART_FilterButton"
                                        Grid.Column="2"
                                        Width="24" Height="24"
                                        Margin="4,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="0">
                                                <Path x:Name="FilterIndicator"
                                                      Data="M 4,4 L 24,4 L 16,14 L 16,24 L 12,20 L 12,14 Z"
                                                      Stroke="{StaticResource FluentAccentBrush}"
                                                      StrokeThickness="2"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"
                                                      StrokeLineJoin="Round"
                                                      Fill="Transparent"
                                                      Width="16" Height="16"
                                                      Stretch="Uniform"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="FilterIndicator" Property="Stroke" Value="#005A9E"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsFiltered, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="True">
                                                    <Setter TargetName="FilterIndicator" Property="Fill" Value="{StaticResource FluentAccentBrush}"/>
                                                    <Setter TargetName="FilterIndicator" Property="Stroke" Value="{StaticResource FluentAccentBrush}"/>
                                                    <Setter TargetName="FilterIndicator" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CanFilter, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- Resize Grip (Overlay to ignore padding and border) -->
                        <Thumb x:Name="PART_ResizeGrip"
                               Width="8"
                               Margin="0,0,-4,0"
                               Background="Transparent"
                               HorizontalAlignment="Right"
                               Cursor="SizeWE">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <Border Background="Transparent" SnapsToDevicePixels="True">
                                        <Rectangle x:Name="DividerLine"
                                                   VerticalAlignment="Stretch"
                                                   Width="1"
                                                   Fill="{StaticResource GridCellBorderBrush}"
                                                   HorizontalAlignment="Left"
                                                   Margin="4,0,0,0"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                                            <Setter TargetName="DividerLine" Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HeaderBorder" Property="Background" 
                                    Value="Transparent" />
                            <Setter TargetName="PART_ResizeGrip" Property="Opacity" Value="1" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0,0,0,0" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0,0,0,2" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Column.IsSelectionColumn, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter TargetName="PART_SortButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_FilterButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="HeaderText" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_HeaderSelectionCheckBox" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridGroupRow Style -->
    <Style TargetType="{x:Type controls:GridGroupRow}">
        <Setter Property="Background" Value="{StaticResource GridGroupHeaderBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderSubtleBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridGroupRow}">
                    <Border x:Name="GroupBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Expand/Collapse Icon -->
                            <Path x:Name="ExpandIcon"
                                  Grid.Column="0"
                                  Width="10" Height="10"
                                  Fill="{StaticResource FluentTextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5"
                                  Data="M0,0 L6,5 L0,10 Z">
                                <Path.RenderTransform>
                                    <RotateTransform x:Name="ExpandIconRotation" Angle="0" />
                                </Path.RenderTransform>
                            </Path>
                            
                            <!-- Group Header Content -->
                            <ContentPresenter Grid.Column="1"
                                              Margin="8,0,0,0"
                                              VerticalAlignment="Center" />
                            
                            <!-- Item Count -->
                            <TextBlock x:Name="ItemCount"
                                       Grid.Column="2"
                                       Text="{TemplateBinding ItemCountText}"
                                       Foreground="{StaticResource FluentTextSecondaryBrush}"
                                       FontWeight="Normal"
                                       FontSize="{StaticResource FluentFontSizeSmall}"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ExpandIcon" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="GroupBorder" Property="Background" 
                                    Value="{StaticResource FluentBackgroundHoverBrush}" />
                        </Trigger>
                        <Trigger Property="GroupLevel" Value="1">
                            <Setter TargetName="GroupBorder" Property="Background" 
                                    Value="{StaticResource GridGroupHeaderLevel1Brush}" />
                            <Setter Property="Padding" Value="20,6,8,6" />
                        </Trigger>
                        <Trigger Property="GroupLevel" Value="2">
                            <Setter TargetName="GroupBorder" Property="Background" 
                                    Value="{StaticResource GridGroupHeaderLevel2Brush}" />
                            <Setter Property="Padding" Value="32,6,8,6" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasHorizontalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="GroupBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent Button Style for Grid Buttons -->
    <Style x:Key="FluentGridButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource FluentAccentBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FluentFontSizeSmall}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource FluentCornerRadiusSmall}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource FluentAccentLightBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource FluentAccentDarkBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource FluentTextDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent CheckBox Style -->
    <Style x:Key="FluentGridCheckBoxStyle" TargetType="{x:Type CheckBox}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderBrightBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid>
                        <Border x:Name="CheckBorder"
                                Width="18" Height="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource FluentCornerRadiusSmall}">
                            <Path x:Name="CheckMark"
                                  Width="12" Height="12"
                                  Fill="{StaticResource FluentTextPrimaryBrush}"
                                  Visibility="Collapsed"
                                  Data="M1.5,5.5 L4.5,8.5 L10.5,2.5" 
                                  Stretch="Uniform"
                                  StrokeThickness="2"
                                  Stroke="{StaticResource FluentTextPrimaryBrush}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckBorder" Property="Background" 
                                    Value="{StaticResource FluentAccentBrush}" />
                            <Setter TargetName="CheckBorder" Property="BorderBrush" 
                                    Value="{StaticResource FluentAccentBrush}" />
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="CheckBorder" Property="Background" 
                                    Value="{StaticResource FluentAccentBrush}" />
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            <Setter TargetName="CheckMark" Property="Data" Value="M3,9 L13,9" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBorder" Property="BorderBrush" 
                                    Value="{StaticResource FluentAccentLightBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="CheckBorder" Property="Background" 
                                    Value="{StaticResource FluentBackgroundBrush}" />
                            <Setter TargetName="CheckBorder" Property="BorderBrush" 
                                    Value="{StaticResource FluentTextDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent ComboBox Style -->
    <Style x:Key="FluentGridComboBoxStyle" TargetType="{x:Type ComboBox}">
        <Setter Property="Background" Value="{StaticResource FluentSurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FluentFontSizeNormal}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      Focusable="False"
                                      ClickMode="Press"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border x:Name="Border"
                                            Background="{StaticResource FluentSurfaceBrush}"
                                            BorderBrush="{StaticResource FluentBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="{StaticResource FluentCornerRadiusSmall}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="24" />
                                            </Grid.ColumnDefinitions>
                                            <Path Grid.Column="1"
                                                  Width="10" Height="6"
                                                  Fill="{StaticResource FluentTextSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Data="M0,0 L5,5 L10,0 Z" />
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" 
                                                    Value="{StaticResource FluentBorderBrightBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          Margin="8,4,24,4"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left" />
                        <Popup x:Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                            <Border x:Name="DropDownBorder"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                    Background="{StaticResource FluentSurfaceBrush}"
                                    BorderBrush="{StaticResource FluentBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource FluentCornerRadius}"
                                    Margin="0,2,0,0">
                                <ScrollViewer SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" 
                                                KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent TextBox Style -->
    <Style x:Key="FluentGridTextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{StaticResource FluentSurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource FluentBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="CaretBrush" Value="{StaticResource FluentTextPrimaryBrush}" />
        <Setter Property="SelectionBrush" Value="{StaticResource FluentAccentBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FluentFontSizeNormal}" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource FluentCornerRadiusSmall}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      Focusable="False"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" 
                                    Value="{StaticResource FluentBorderBrightBrush}" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" 
                                    Value="{StaticResource FluentAccentBrush}" />
                            <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent ScrollBar Style -->
    <Style x:Key="FluentScrollBarThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Background" Value="{StaticResource FluentBorderBrightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3"
                            Margin="2" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" 
                                    Value="{StaticResource FluentTextSecondaryBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FluentScrollBarStyle" TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Width" Value="12" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="12" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
