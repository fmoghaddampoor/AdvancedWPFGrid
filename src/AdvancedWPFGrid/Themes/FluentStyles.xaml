<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:AdvancedWPFGrid.Controls"
    xmlns:col="clr-namespace:AdvancedWPFGrid.Columns">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Converters -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <!-- Professional Checkbox Style for Grid Columns -->
    <Style x:Key="FluentGridCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="#888888" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid>
                        <Border x:Name="CheckBorder"
                                Width="18" Height="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True" />
                        <Path x:Name="CheckMark"
                              Width="12" Height="12"
                              Data="M 2,6 L 6,10 L 12,2"
                              Stroke="#333333"
                              StrokeThickness="2"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              StrokeLineJoin="Round"
                              Visibility="Collapsed"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                        <Rectangle x:Name="IndeterminateMark"
                                   Width="10" Height="2"
                                   Fill="#333333"
                                   RadiusX="1" RadiusY="1"
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="IndeterminateMark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#666666" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent Button Style for Grid Buttons -->
    <Style x:Key="FluentGridButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource FluentAccentBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FluentFontSizeSmall}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource FluentCornerRadiusSmall}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource FluentAccentLightBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource FluentAccentDarkBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource FluentTextDisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent ComboBox Style -->
    <Style x:Key="FluentGridComboBoxStyle" TargetType="{x:Type ComboBox}">
        <Setter Property="Background" Value="{DynamicResource FluentSurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource FluentBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource FluentTextPrimaryBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FluentFontSizeNormal}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      Focusable="False"
                                      ClickMode="Press"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border x:Name="Border"
                                            Background="{DynamicResource FluentSurfaceBrush}"
                                            BorderBrush="{DynamicResource FluentBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="{DynamicResource FluentCornerRadiusSmall}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="24" />
                                            </Grid.ColumnDefinitions>
                                            <Path Grid.Column="1"
                                                  Width="10" Height="6"
                                                  Fill="{DynamicResource FluentTextSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Data="M0,0 L5,5 L10,0 Z" />
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" 
                                                    Value="{StaticResource FluentBorderBrightBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          Margin="8,4,24,4"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left" />
                        <Popup x:Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                            <Border x:Name="DropDownBorder"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                    Background="{DynamicResource FluentSurfaceBrush}"
                                    BorderBrush="{DynamicResource FluentBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource FluentCornerRadius}"
                                    Margin="0,2,0,0">
                                <ScrollViewer SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" 
                                                KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent TextBox Style -->
    <Style x:Key="FluentGridTextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{DynamicResource FluentSurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource FluentBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource FluentTextPrimaryBrush}" />
        <Setter Property="CaretBrush" Value="{DynamicResource FluentTextPrimaryBrush}" />
        <Setter Property="SelectionBrush" Value="{DynamicResource FluentAccentBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FluentFontSizeNormal}" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource FluentCornerRadiusSmall}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      Focusable="False"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" 
                                    Value="{StaticResource FluentBorderBrightBrush}" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" 
                                    Value="{DynamicResource FluentAccentBrush}" />
                            <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,2" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent ScrollBar Styles -->
    <Style x:Key="FluentScrollBarThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Background" Value="{StaticResource FluentBorderBrightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3"
                            Margin="2" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" 
                                    Value="{DynamicResource FluentTextSecondaryBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FluentScrollBarStyle" TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Width" Value="12" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="12" />
            </Trigger>
        </Style.Triggers>
    </Style>


    <!-- AdvancedGrid Style -->
    <Style TargetType="{x:Type controls:AdvancedGrid}">
        <Setter Property="Background" Value="{DynamicResource FluentSurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FluentBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource FluentTextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AdvancedGrid}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/> <!-- Search Panel -->
                                <RowDefinition Height="Auto"/> <!-- Header -->
                                <RowDefinition Height="*"/>    <!-- Items -->
                                <RowDefinition Height="Auto"/> <!-- Summary Row -->
                            </Grid.RowDefinitions>

                            <!-- Search Panel -->
                            <Border x:Name="PART_SearchPanel" 
                                    Grid.Row="0"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="10,8"
                                    Background="{DynamicResource FluentSurfaceAltBrush}"
                                    Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/> <!-- Result Count -->
                                        <ColumnDefinition Width="Auto"/> <!-- Export Button -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Integrated Search Field -->
                                    <Border Grid.Column="0"
                                            Background="{DynamicResource FluentSurfaceBrush}"
                                            BorderBrush="{DynamicResource FluentBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="{DynamicResource FluentCornerRadiusSmall}"
                                            FocusManager.IsFocusScope="True"
                                            x:Name="SearchFieldBorder">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                                <ColumnDefinition Width="*"/>    <!-- Input -->
                                                <ColumnDefinition Width="Auto"/> <!-- Clear Button -->
                                            </Grid.ColumnDefinitions>

                                            <!-- Clickable Search Icon -->
                                            <Button x:Name="PART_SearchIconButton"
                                                    Grid.Column="0"
                                                    Width="34" Height="Auto"
                                                    Command="{x:Static ApplicationCommands.Find}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Search">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="IconBorder" Background="Transparent" CornerRadius="4,0,0,4">
                                                            <Path x:Name="SearchIcon"
                                                                  Data="M 15.5 14 h -0.79 l -0.28 -0.27 C 15.41 12.59 16 11.11 16 9.5 C 16 5.91 13.09 3 9.5 3 S 3 5.91 3 9.5 S 5.91 16 9.5 16 c 1.61 0 3.09 -0.59 4.23 -1.57 l 0.27 0.28 v 0.79 l 5 4.99 L 20.49 19 l -4.99 -5 z m -6 0 C 7.01 14 5 11.99 5 9.5 S 7.01 5 9.5 5 S 14 7.01 14 9.5 S 11.99 14 9.5 14 z"
                                                                  Fill="{DynamicResource FluentAccentBrush}"
                                                                  Width="14" Height="14"
                                                                  Stretch="Uniform"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="IconBorder" Property="Background" Value="#10000000"/>
                                                                <Setter TargetName="SearchIcon" Property="Fill" Value="{DynamicResource FluentAccentLightBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <TextBox x:Name="PART_SearchBox"
                                                     Grid.Column="1"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     VerticalContentAlignment="Center"
                                                     FontSize="13"
                                                     Text="{Binding SearchText, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                                     Tag="Search grid items...">
                                                <TextBox.InputBindings>
                                                     <KeyBinding Key="Enter" Command="{x:Static ApplicationCommands.Find}" />
                                                </TextBox.InputBindings>
                                            </TextBox>

                                            <!-- Nested Clear Button -->
                                            <Button x:Name="PART_ClearSearchButton"
                                                    Grid.Column="2"
                                                    Width="24" Height="24"
                                                    Margin="0,0,4,0"
                                                    ToolTip="Clear Search"
                                                    Command="{x:Static ApplicationCommands.Delete}"
                                                    Background="Transparent"
                                                    BorderThickness="0">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="12">
                                                            <Path x:Name="ClearIcon"
                                                                  Data="M 19,6.41 L 17.59,5 L 12,10.59 L 6.41,5 L 5,6.41 L 10.59,12 L 5,17.59 L 6.41,19 L 12,13.41 L 17.59,19 L 19,17.59 L 13.41,12 Z"
                                                                  Fill="{DynamicResource FluentTextSecondaryBrush}"
                                                                  Width="10" Height="10"
                                                                  Stretch="Uniform"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="BtnBorder" Property="Background" Value="#15000000"/>
                                                                <Setter TargetName="ClearIcon" Property="Fill" Value="{DynamicResource FluentAccentBrush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="BtnBorder" Property="Background" Value="#25000000"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Text.Length, ElementName=PART_SearchBox}" Value="0">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!-- Result Count -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding SearchMatchCount, RelativeSource={RelativeSource TemplatedParent}, StringFormat='{}{0} found'}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource FluentTextSecondaryBrush}"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>

                                    <Menu x:Name="PART_ExportMenu"
                                          Grid.Column="2" 
                                          Background="Transparent" 
                                          VerticalAlignment="Center" 
                                          Margin="10,0,0,0"
                                          Visibility="Collapsed">
                                        <MenuItem Header="Export" 
                                                  Padding="8,4"
                                                  ItemsSource="{Binding ExportProviders, RelativeSource={RelativeSource TemplatedParent}}">
                                             <MenuItem.Template>
                                                <ControlTemplate TargetType="MenuItem">
                                                    <Grid SnapsToDevicePixels="True">
                                                        <Border x:Name="Border" 
                                                                Background="Transparent"
                                                                BorderBrush="{DynamicResource FluentBorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="{DynamicResource FluentCornerRadiusSmall}"
                                                                Padding="8,4">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Path Data="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"
                                                                      Fill="{DynamicResource FluentAccentBrush}"
                                                                      Width="12" Height="12"
                                                                      Stretch="Uniform"
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,6,0"/>
                                                                <TextBlock Text="Export" 
                                                                           VerticalAlignment="Center"
                                                                           FontSize="12"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource FluentTextPrimaryBrush}"/>
                                                                <Path Data="M7 10l5 5 5-5z"
                                                                      Fill="{DynamicResource FluentTextSecondaryBrush}"
                                                                      Width="8" Height="8"
                                                                      Stretch="Uniform"
                                                                      VerticalAlignment="Center"
                                                                      Margin="6,0,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <Popup x:Name="PART_Popup"
                                                               AllowsTransparency="True"
                                                               Focusable="False"
                                                               IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                               Placement="Bottom"
                                                               PopupAnimation="Fade">
                                                            <Border Background="{DynamicResource FluentSurfaceBrush}"
                                                                    BorderBrush="{DynamicResource FluentBorderBrush}"
                                                                    BorderThickness="1"
                                                                    CornerRadius="{DynamicResource FluentCornerRadiusSmall}"
                                                                    Padding="2"
                                                                    MinWidth="120"
                                                                    Margin="0,4,0,0">
                                                                <ScrollViewer x:Name="SubMenuScrollViewer" CanContentScroll="True">
                                                                    <ItemsPresenter x:Name="ItemsPresenter" 
                                                                                    KeyboardNavigation.DirectionalNavigation="Cycle" 
                                                                                    KeyboardNavigation.TabNavigation="Cycle" 
                                                                                    Grid.IsSharedSizeScope="True" 
                                                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                                </ScrollViewer>
                                                            </Border>
                                                        </Popup>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsHighlighted" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource FluentSurfaceBrush}"/>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource FluentAccentBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSubmenuOpen" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource FluentSurfaceBrush}"/>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource FluentAccentBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </MenuItem.Template>
                                            <MenuItem.ItemContainerStyle>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Header" Value="{Binding FormatName}"/>
                                                    <Setter Property="Command" Value="{Binding Path=ExportCommand, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}"/>
                                                    <Setter Property="CommandParameter" Value="{Binding}"/>
                                                    <Setter Property="Padding" Value="10,6"/>
                                                </Style>
                                            </MenuItem.ItemContainerStyle>
                                        </MenuItem>
                                    </Menu>
                                </Grid>
                            </Border>

                            <!-- Column Headers -->
                            <Border x:Name="PART_HeaderHost"
                                    Grid.Row="1"
                                    Background="{DynamicResource GridHeaderBackgroundBrush}"
                                    BorderBrush="{DynamicResource FluentBorderSubtleBrush}"
                                    BorderThickness="0,0,0,1">
                                <controls:GridHeaderPresenter x:Name="PART_HeaderPresenter" 
                                                              HorizontalAlignment="Left" />
                            </Border>

                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          Grid.Row="2"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          CanContentScroll="True"
                                          Focusable="False">
                                <controls:VirtualizingGridPanel x:Name="PART_ItemsHost" />
                            </ScrollViewer>

                            <Border x:Name="PART_SummaryRow"
                                    Grid.Row="3"
                                    Visibility="Collapsed"
                                    Background="{DynamicResource FluentSurfaceAltBrush}"
                                    BorderBrush="{DynamicResource FluentBorderSubtleBrush}"
                                    BorderThickness="0,1,0,0">
                                <controls:GridSummaryPresenter x:Name="PART_SummaryPresenter" />
                            </Border>
                        </Grid>
                    </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSearchPanelVisible" Value="True">
                                                    <Setter TargetName="PART_SearchPanel" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger Property="ShowSummaryRow" Value="True">
                                                    <Setter TargetName="PART_SummaryRow" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger Property="CanUserExport" Value="True">
                                                    <Setter TargetName="PART_ExportMenu" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger SourceName="PART_SearchBox" Property="IsFocused" Value="True">
                                                    <Setter TargetName="SearchFieldBorder" Property="BorderBrush" Value="{DynamicResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SearchFieldBorder" Property="BorderThickness" Value="1,1,1,2"/>
                                                </Trigger>
                                                <Trigger SourceName="SearchFieldBorder" Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SearchFieldBorder" Property="BorderBrush" Value="{StaticResource FluentBorderBrightBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridSummaryCell Style -->
    <Style TargetType="{x:Type controls:GridSummaryCell}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridSummaryCell}">
                    <Border x:Name="CellBorder" 
                            BorderBrush="{DynamicResource FluentBorderSubtleBrush}"
                            BorderThickness="0,0,1,0"
                            Padding="10,4">
                        <TextBlock Text="{Binding Result.FormattedValue, RelativeSource={RelativeSource TemplatedParent}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="{Binding Grid.SummaryAlignment, RelativeSource={RelativeSource TemplatedParent}}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource FluentAccentBrush}"
                                   FontSize="12"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding HasVerticalSummarySeparator, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsLastFrozen, RelativeSource={RelativeSource Self}}" Value="True" />
                                <Condition Binding="{Binding HasVerticalFrozenColumnSeparator, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0,0,2,0" />
                            <Setter TargetName="CellBorder" Property="BorderBrush" Value="{DynamicResource FluentBorderBrush}" />
                        </MultiDataTrigger>
                        <Trigger Property="IsFrozen" Value="True">
                            <Setter TargetName="CellBorder" Property="Background" Value="{DynamicResource FluentSurfaceAltBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridRow Style -->
    <Style TargetType="{x:Type controls:GridRow}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource GridCellBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Foreground" Value="{DynamicResource FluentTextPrimaryBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridRow}">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <controls:GridCellsPresenter x:Name="PART_CellsPresenter" 
                                                     HorizontalAlignment="Left" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsAlternate, RelativeSource={RelativeSource Self}}" Value="True" />
                                <Condition Binding="{Binding AlternatingRows, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowAlternateBackgroundBrush}" />
                        </MultiDataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowHoverBackgroundBrush}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowSelectedBackgroundBrush}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="controls:AdvancedGrid.IsGridFocused" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="RootBorder" Property="Background" 
                                    Value="{StaticResource GridRowSelectedInactiveBackgroundBrush}" />
                        </MultiTrigger>
                        <DataTrigger Binding="{Binding HasHorizontalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="RootBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridCell Style -->
    <Style TargetType="{x:Type controls:GridCell}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource GridCellBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="Foreground" Value="{DynamicResource FluentTextPrimaryBrush}" />
        <Setter Property="Padding" Value="{DynamicResource FluentCellPadding}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridCell}">
                    <Border x:Name="CellBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEditing" Value="True">
                            <Setter TargetName="CellBorder" Property="BorderBrush" 
                                    Value="{DynamicResource FluentAccentBrush}" />
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="2" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="CellBorder" Property="BorderBrush" 
                                    Value="{DynamicResource FluentAccentBrush}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsLastFrozen, RelativeSource={RelativeSource Self}}" Value="True" />
                                <Condition Binding="{Binding HasVerticalFrozenColumnSeparator, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="CellBorder" Property="BorderBrush" Value="{DynamicResource FluentBorderBrush}" />
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0,0,2,0" />
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="True" />
                                <Condition Binding="{Binding IsLastFrozen, RelativeSource={RelativeSource Self}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0,0,1,0" />
                        </MultiDataTrigger>
                        <Trigger Property="IsFrozen" Value="True">
                            <Setter TargetName="CellBorder" Property="Background" Value="{DynamicResource FluentSurfaceAltBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridHeaderCell Style -->
    <Style TargetType="{x:Type controls:GridHeaderCell}">
        <Setter Property="Background" Value="{DynamicResource FluentSurfaceAltBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource FluentBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,1" />
        <Setter Property="Foreground" Value="{DynamicResource FluentTextPrimaryBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridHeaderCell}">
                    <Grid>
                        <Border x:Name="HeaderBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,0,1,1"
                                Padding="10,0,8,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Header Text -->
                                <TextBlock x:Name="HeaderText"
                                           Grid.Column="0"
                                           Text="{TemplateBinding Content}"
                                           Foreground="{TemplateBinding Foreground}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           TextTrimming="CharacterEllipsis" />

                                <CheckBox x:Name="PART_HeaderSelectionCheckBox"
                                          Grid.Column="0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"
                                          Style="{DynamicResource FluentGridCheckBoxStyle}"
                                          IsChecked="{Binding SelectionState, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" />
                                
                                <!-- Sort Button (High-Impact SVG) -->
                                <Button x:Name="PART_SortButton"
                                        Grid.Column="1"
                                        Width="28" Height="28"
                                        Margin="4,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="0">
                                                <Path x:Name="SortArrow"
                                                       Data="M 6,12 L 14,4 L 22,12 M 6,16 L 14,24 L 22,16"
                                                       Stroke="{DynamicResource FluentAccentBrush}"
                                                       StrokeThickness="2"
                                                       StrokeStartLineCap="Round"
                                                       StrokeEndLineCap="Round"
                                                       StrokeLineJoin="Round"
                                                       Stretch="Uniform"
                                                       Width="16" Height="20"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SortArrow" Property="Stroke" Value="{DynamicResource FluentAccentLightBrush}"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding SortDirection, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="Ascending">
                                                    <Setter TargetName="SortArrow" Property="Data" Value="M 4,20 L 14,4 L 24,20" />
                                                    <Setter TargetName="SortArrow" Property="Stroke" Value="{DynamicResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortArrow" Property="Fill" Value="{DynamicResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortArrow" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SortDirection, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="Descending">
                                                    <Setter TargetName="SortArrow" Property="Data" Value="M 4,8 L 14,24 L 24,8" />
                                                    <Setter TargetName="SortArrow" Property="Stroke" Value="{DynamicResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortArrow" Property="Fill" Value="{DynamicResource FluentAccentBrush}"/>
                                                    <Setter TargetName="SortArrow" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CanSort, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                
                                <!-- Filter Button (High-Impact SVG) -->
                                <Button x:Name="PART_FilterButton"
                                        Grid.Column="2"
                                        Width="28" Height="28"
                                        Margin="4,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="0">
                                                <Path x:Name="FilterIcon"
                                                       Data="M 4,4 L 24,4 L 16,14 L 16,24 L 12,20 L 12,14 Z"
                                                       Stroke="{DynamicResource FluentAccentBrush}"
                                                       StrokeThickness="2"
                                                       StrokeStartLineCap="Round"
                                                       StrokeEndLineCap="Round"
                                                       StrokeLineJoin="Round"
                                                       Fill="Transparent"
                                                       Width="18" Height="18"
                                                       Stretch="Uniform"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="FilterIcon" Property="Stroke" Value="{DynamicResource FluentAccentLightBrush}"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsFiltered, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="True">
                                                    <Setter TargetName="FilterIcon" Property="Fill" Value="{DynamicResource FluentAccentBrush}"/>
                                                    <Setter TargetName="FilterIcon" Property="Stroke" Value="{DynamicResource FluentAccentBrush}"/>
                                                    <Setter TargetName="FilterIcon" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CanFilter, RelativeSource={RelativeSource AncestorType=controls:GridHeaderCell}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- Resize Grip (Overlay to ignore padding and border) -->
                        <Thumb x:Name="PART_ResizeGrip"
                               Width="8"
                               Margin="0,0,-4,0"
                               Background="Transparent"
                               HorizontalAlignment="Right"
                               Cursor="SizeWE">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <Border Background="Transparent" SnapsToDevicePixels="True">
                                        <Rectangle x:Name="DividerLine"
                                                   VerticalAlignment="Stretch"
                                                   Width="1"
                                                   Fill="{DynamicResource FluentBorderBrush}"
                                                   HorizontalAlignment="Left"
                                                   Margin="4,0,0,0"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding HasVerticalHeaderColumnSeparator, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                                            <Setter TargetName="DividerLine" Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_ResizeGrip" Property="Opacity" Value="1" />
                        </Trigger>
                        <DataTrigger Binding="{Binding IsSelectionColumn, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter TargetName="PART_SortButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_FilterButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="HeaderText" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_HeaderSelectionCheckBox" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HasVerticalHeaderColumnSeparator, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0,0,0,1" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsLastFrozen, RelativeSource={RelativeSource Self}}" Value="True" />
                                <Condition Binding="{Binding HasVerticalFrozenColumnSeparator, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0,0,2,1" />
                        </MultiDataTrigger>
                        <Trigger Property="IsFrozen" Value="True">
                            <Setter Property="Background" Value="{DynamicResource FluentSurfaceAltBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridGroupRow Style -->
    <Style TargetType="{x:Type controls:GridGroupRow}">
        <Setter Property="Background" Value="{DynamicResource GridGroupHeaderBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource FluentBorderSubtleBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Foreground" Value="{DynamicResource FluentTextPrimaryBrush}" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridGroupRow}">
                    <Border x:Name="GroupBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Expand/Collapse Icon -->
                            <Path x:Name="ExpandIcon"
                                  Grid.Column="0"
                                  Width="10" Height="10"
                                  Fill="{DynamicResource FluentTextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5"
                                  Data="M0,0 L6,5 L0,10 Z">
                                <Path.RenderTransform>
                                    <RotateTransform x:Name="ExpandIconRotation" Angle="0" />
                                </Path.RenderTransform>
                            </Path>
                            
                            <!-- Group Header Content -->
                            <ContentPresenter Grid.Column="1"
                                              Margin="8,0,0,0"
                                              VerticalAlignment="Center" />

                            <!-- Group Aggregates -->
                            <ItemsControl Grid.Column="2" 
                                          ItemsSource="{Binding GridGroupItem.GroupSummaries, RelativeSource={RelativeSource TemplatedParent}}"
                                          Margin="12,0,12,0"
                                          VerticalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FormattedValue}" 
                                                   Margin="0,0,12,0"
                                                   Foreground="{DynamicResource FluentAccentBrush}"
                                                   FontWeight="Bold"
                                                   FontSize="11"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Item Count -->
                            <TextBlock x:Name="ItemCount"
                                       Grid.Column="3"
                                       Text="{TemplateBinding ItemCountText}"
                                       Foreground="{DynamicResource FluentTextSecondaryBrush}"
                                       FontWeight="Normal"
                                       FontSize="{DynamicResource FluentFontSizeSmall}"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ExpandIcon" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="GroupBorder" Property="Background" 
                                    Value="{StaticResource FluentBackgroundHoverBrush}" />
                        </Trigger>
                        <Trigger Property="GroupLevel" Value="1">
                            <Setter TargetName="GroupBorder" Property="Background" 
                                    Value="{StaticResource GridGroupHeaderLevel1Brush}" />
                            <Setter Property="Padding" Value="20,6,8,6" />
                        </Trigger>
                        <Trigger Property="GroupLevel" Value="2">
                            <Setter TargetName="GroupBorder" Property="Background" 
                                    Value="{StaticResource GridGroupHeaderLevel2Brush}" />
                            <Setter Property="Padding" Value="32,6,8,6" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasHorizontalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="GroupBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>
