<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:AdvancedWPFGrid.Controls">

    <!-- Simple inline styles - no merged dictionaries -->
    
    <!-- AdvancedGrid Style -->
    <Style TargetType="{x:Type controls:AdvancedGrid}">
        <Setter Property="Background" Value="#1E1E1E" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="#454545" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AdvancedGrid}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Column Headers -->
                            <Border Grid.Row="0"
                                    Background="#2D2D2D"
                                    BorderBrush="#454545"
                                    BorderThickness="0,0,0,1">
                                <controls:GridHeaderPresenter x:Name="PART_HeaderPresenter" />
                            </Border>
                            
                            <!-- Virtualized Content -->
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          Grid.Row="1"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          CanContentScroll="True"
                                          Focusable="False">
                                <controls:VirtualizingGridPanel x:Name="PART_ItemsHost" />
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridRow Style -->
    <Style TargetType="{x:Type controls:GridRow}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridRow}">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1">
                        <controls:GridCellsPresenter x:Name="PART_CellsPresenter" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="#353535" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="#0078D4" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasHorizontalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="RootBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsAlternate, RelativeSource={RelativeSource Self}}" Value="True" />
                                <Condition Binding="{Binding AlternatingRows, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="RootBorder" Property="Background" Value="#252525" />
                        </MultiDataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridCell Style -->
    <Style TargetType="{x:Type controls:GridCell}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridCell}">
                    <Border x:Name="CellBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,1,0"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridHeaderCell Style -->
    <Style TargetType="{x:Type controls:GridHeaderCell}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridHeaderCell}">
                    <Grid>
                        <Border x:Name="HeaderBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#3A3A3A"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{TemplateBinding Content}"
                                           Foreground="{TemplateBinding Foreground}"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- Sort Button (High-Impact SVG) -->
                                <Button x:Name="PART_SortButton"
                                        Grid.Column="1"
                                        Width="24" Height="24"
                                        Margin="2,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="0">
                                                <Path x:Name="SortArrow"
                                                      Data="M 6,12 L 14,4 L 22,12 M 6,16 L 14,24 L 22,16"
                                                      Stroke="#0078D4"
                                                      StrokeThickness="2"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"
                                                      StrokeLineJoin="Round"
                                                      Stretch="Uniform"
                                                      Width="14" Height="18"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SortArrow" Property="Stroke" Value="#005A9E"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding Tag.SortDirection, RelativeSource={RelativeSource Self}}" Value="Ascending">
                                                    <Setter TargetName="SortArrow" Property="Data" Value="M 4,20 L 14,4 L 24,20" />
                                                    <Setter TargetName="SortArrow" Property="Stroke" Value="#0078D4"/>
                                                    <Setter TargetName="SortArrow" Property="Fill" Value="#0078D4"/>
                                                    <Setter TargetName="SortArrow" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Tag.SortDirection, RelativeSource={RelativeSource Self}}" Value="Descending">
                                                    <Setter TargetName="SortArrow" Property="Data" Value="M 4,8 L 14,24 L 24,8" />
                                                    <Setter TargetName="SortArrow" Property="Stroke" Value="#0078D4"/>
                                                    <Setter TargetName="SortArrow" Property="Fill" Value="#0078D4"/>
                                                    <Setter TargetName="SortArrow" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Tag.CanSort, RelativeSource={RelativeSource Self}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Filter Button (High-Impact SVG) -->
                                <Button x:Name="PART_FilterButton"
                                        Grid.Column="2"
                                        Width="24" Height="24"
                                        Margin="2,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Tag="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="0">
                                                <Path x:Name="FilterIcon"
                                                      Data="M 4,4 L 24,4 L 16,14 L 16,24 L 12,20 L 12,14 Z"
                                                      Stroke="#0078D4"
                                                      StrokeThickness="2"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"
                                                      StrokeLineJoin="Round"
                                                      Fill="Transparent"
                                                      Width="16" Height="16"
                                                      Stretch="Uniform"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="FilterIcon" Property="Stroke" Value="#005A9E"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding Tag.IsFiltered, RelativeSource={RelativeSource Self}}" Value="True">
                                                    <Setter TargetName="FilterIcon" Property="Fill" Value="#0078D4"/>
                                                    <Setter TargetName="FilterIcon" Property="Stroke" Value="#0078D4"/>
                                                    <Setter TargetName="FilterIcon" Property="StrokeThickness" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Tag.CanFilter, RelativeSource={RelativeSource Self}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <Thumb x:Name="PART_ResizeGrip"
                               Width="8"
                               Margin="0,0,-4,0"
                               Background="Transparent"
                               HorizontalAlignment="Right"
                               Cursor="SizeWE">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <Border Background="Transparent" SnapsToDevicePixels="True">
                                        <Rectangle x:Name="DividerLine"
                                                   VerticalAlignment="Stretch"
                                                   Width="1"
                                                   Fill="#E0E0E0"
                                                   HorizontalAlignment="Left"
                                                   Margin="4,0,0,0"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                                            <Setter TargetName="DividerLine" Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HeaderBorder" Property="Background" Value="#383838" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridGroupRow Style -->
    <Style TargetType="{x:Type controls:GridGroupRow}">
        <Setter Property="Background" Value="#383838" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridGroupRow}">
                    <Border x:Name="GroupBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#454545"
                            BorderThickness="0,0,0,1"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="â–¶" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center" />
                            
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                             <Setter Property="Background" Value="#454545" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasHorizontalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="GroupBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
