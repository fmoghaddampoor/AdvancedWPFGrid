<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:AdvancedWPFGrid.Controls">

    <!-- Simple inline styles - no merged dictionaries -->
    
    <!-- AdvancedGrid Style -->
    <Style TargetType="{x:Type controls:AdvancedGrid}">
        <Setter Property="Background" Value="#1E1E1E" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="#454545" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:AdvancedGrid}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Column Headers -->
                            <Border Grid.Row="0"
                                    Background="#2D2D2D"
                                    BorderBrush="#454545"
                                    BorderThickness="0,0,0,1">
                                <controls:GridHeaderPresenter x:Name="PART_HeaderPresenter" />
                            </Border>
                            
                            <!-- Virtualized Content -->
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          Grid.Row="1"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          CanContentScroll="True"
                                          Focusable="False">
                                <controls:VirtualizingGridPanel x:Name="PART_ItemsHost" />
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridRow Style -->
    <Style TargetType="{x:Type controls:GridRow}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridRow}">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#3A3A3A"
                            BorderThickness="0,0,0,1">
                        <controls:GridCellsPresenter x:Name="PART_CellsPresenter" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="#353535" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="#0078D4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridCell Style -->
    <Style TargetType="{x:Type controls:GridCell}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridCell}">
                    <Border x:Name="CellBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#3A3A3A"
                            BorderThickness="0,0,1,0"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="CellBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridHeaderCell Style -->
    <Style TargetType="{x:Type controls:GridHeaderCell}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridHeaderCell}">
                    <Border x:Name="HeaderBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#3A3A3A"
                            BorderThickness="0,0,1,0"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>

                            <!-- Sort Button -->
                            <Button x:Name="PART_SortButton"
                                    Grid.Column="1"
                                    Width="16" Height="16"
                                    Margin="2,0,0,0"
                                    Background="Yellow"
                                    BorderThickness="0"
                                    Tag="{Binding SortDirection, RelativeSource={RelativeSource TemplatedParent}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                            <Path x:Name="SortArrow"
                                                  Data="M 0 4 L 4 0 L 8 4 M 0 8 L 4 12 L 8 8"
                                                  Fill="Red"
                                                  Stretch="Uniform"
                                                  Width="8" Height="12"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Orange"/>
                                            </Trigger>
                                            <Trigger Property="Tag" Value="Ascending">
                                                <Setter TargetName="SortArrow" Property="Data" Value="M 0 5 L 4 0 L 8 5" />
                                                <Setter TargetName="SortArrow" Property="Fill" Value="Black" />
                                            </Trigger>
                                            <Trigger Property="Tag" Value="Descending">
                                                <Setter TargetName="SortArrow" Property="Data" Value="M 0 0 L 4 5 L 8 0" />
                                                <Setter TargetName="SortArrow" Property="Fill" Value="Black" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Filter Button -->
                            <Button x:Name="PART_FilterButton"
                                    Grid.Column="2"
                                    Width="16" Height="16"
                                    Margin="2,0,0,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Tag="{Binding IsFiltered, RelativeSource={RelativeSource TemplatedParent}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                                            <Path x:Name="FilterIcon"
                                                  Data="M 1,1 L 9,1 L 5,6 L 5,9 L 3,9 L 3,6 Z"
                                                  Fill="#888888"
                                                  Stroke="#888888"
                                                  StrokeThickness="1"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E0E0E0"/>
                                            </Trigger>
                                            <Trigger Property="Tag" Value="True">
                                                <Setter TargetName="FilterIcon" Property="Fill" Value="#0078D4"/>
                                                <Setter TargetName="FilterIcon" Property="Stroke" Value="#0078D4"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Thumb x:Name="PART_ResizeGrip"
                               Width="8"
                               Margin="0,0,-4,0"
                               Opacity="0"
                               HorizontalAlignment="Right"
                               Cursor="SizeWE"
                               Grid.Column="2"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HeaderBorder" Property="Background" Value="#383838" />
                        </Trigger>
                        <DataTrigger Binding="{Binding HasVerticalGridLines, RelativeSource={RelativeSource AncestorType=controls:AdvancedGrid}}" Value="False">
                            <Setter TargetName="HeaderBorder" Property="BorderThickness" Value="0" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridGroupRow Style -->
    <Style TargetType="{x:Type controls:GridGroupRow}">
        <Setter Property="Background" Value="#383838" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:GridGroupRow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="#454545"
                            BorderThickness="0,0,0,1"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="â–¶" 
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center" />
                            
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
