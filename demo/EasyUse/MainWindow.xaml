<Window x:Class="EasyUse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyUse"
        xmlns:av="clr-namespace:AdvancedWPFGrid.Controls;assembly=AdvancedWPFGrid"
        xmlns:col="clr-namespace:AdvancedWPFGrid.Columns;assembly=AdvancedWPFGrid"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="Easy Use - Advanced WPF Grid Demo" Height="450" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="White"
        x:Name="RootWindow">
    
    <Window.Resources>
        <local:BindingProxy x:Key="Proxy" Data="{Binding}"/>

        <!-- Explicit Style for GridHeaderCell -->
        <Style TargetType="{x:Type av:GridHeaderCell}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="MinHeight" Value="{Binding HeaderHeight, RelativeSource={RelativeSource AncestorType=av:AdvancedGrid}}" />
            <Setter Property="Background" Value="#F7F7F7" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type av:GridHeaderCell}">
                        <Border x:Name="HeaderBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,1,1"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{TemplateBinding Content}"
                                           Foreground="{TemplateBinding Foreground}"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- Sort Button -->
                        <Button x:Name="PART_SortButton"
                                Grid.Column="1"
                                Width="28" Height="28"
                                Margin="4,0,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Opacity="0.9"
                                Tag="{Binding SortDirection, RelativeSource={RelativeSource TemplatedParent}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="6">
                                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <!-- Neutral State: Outline Arrows -->
                                            <Path x:Name="NeutralUp"
                                                  Data="M 0 5 L 6 0 L 12 5"
                                                  Stroke="#0078D4"
                                                  StrokeThickness="2"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  Margin="0,0,0,7"
                                                  Width="12" Height="5"
                                                  Stretch="Uniform"/>
                                            <Path x:Name="NeutralDown"
                                                  Data="M 0 0 L 6 5 L 12 0"
                                                  Stroke="#0078D4"
                                                  StrokeThickness="2"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  Margin="0,7,0,0"
                                                  Width="12" Height="5"
                                                  Stretch="Uniform"/>
                                            
                                            <!-- Sorted State: Filled Bold Arrow -->
                                            <Path x:Name="SortedArrow"
                                                  Visibility="Collapsed"
                                                  Fill="#005A9E"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Width="14" Height="10"
                                                  Stretch="Uniform"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="BtnBorder" Property="Background" Value="Transparent"/>
                                            <Setter TargetName="NeutralUp" Property="Stroke" Value="{StaticResource FluentAccentLightBrush}"/>
                                            <Setter TargetName="NeutralDown" Property="Stroke" Value="{StaticResource FluentAccentLightBrush}"/>
                                            <Setter TargetName="SortedArrow" Property="Fill" Value="{StaticResource FluentAccentLightBrush}"/>
                                            <Setter TargetName="NeutralUp" Property="StrokeThickness" Value="3"/>
                                            <Setter TargetName="NeutralDown" Property="StrokeThickness" Value="3"/>
                                        </Trigger>
                                        
                                        <!-- DataTriggers to watch for TemplatedParent's SortDirection -->
                                        <DataTrigger Binding="{Binding SortDirection, RelativeSource={RelativeSource TemplatedParent}}" Value="Ascending">
                                            <Setter TargetName="NeutralUp" Property="Visibility" Value="Collapsed" />
                                            <Setter TargetName="NeutralDown" Property="Visibility" Value="Collapsed" />
                                            <Setter TargetName="SortedArrow" Property="Visibility" Value="Visible" />
                                            <Setter TargetName="SortedArrow" Property="Data" Value="M 0 10 L 7 0 L 14 10 Z" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SortDirection, RelativeSource={RelativeSource TemplatedParent}}" Value="Descending">
                                            <Setter TargetName="NeutralUp" Property="Visibility" Value="Collapsed" />
                                            <Setter TargetName="NeutralDown" Property="Visibility" Value="Collapsed" />
                                            <Setter TargetName="SortedArrow" Property="Visibility" Value="Visible" />
                                            <Setter TargetName="SortedArrow" Property="Data" Value="M 0 0 L 7 10 L 14 0 Z" />
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CanSort, RelativeSource={RelativeSource TemplatedParent}}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Filter Button -->
                        <Button x:Name="PART_FilterButton"
                                Grid.Column="2"
                                Width="28" Height="28"
                                Margin="4,0,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Opacity="0.9"
                                Tag="{Binding IsFiltered, RelativeSource={RelativeSource TemplatedParent}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="BtnBorder" Background="Transparent" CornerRadius="6">
                                        <Path x:Name="FilterIcon"
                                              Data="M 2 2 L 12 2 L 8 7 L 8 13 L 6 13 L 6 7 Z"
                                              Stroke="#0078D4"
                                              StrokeThickness="2"
                                              StrokeLineJoin="Round"
                                              Fill="Transparent"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Width="14" Height="14"
                                              Stretch="Uniform"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="BtnBorder" Property="Background" Value="Transparent"/>
                                            <Setter TargetName="FilterIcon" Property="Stroke" Value="{StaticResource FluentAccentLightBrush}"/>
                                            <Setter TargetName="FilterIcon" Property="StrokeThickness" Value="3"/>
                                        </Trigger>
                                        <Trigger Property="Tag" Value="True">
                                            <Setter TargetName="FilterIcon" Property="Fill" Value="#0078D4"/>
                                            <Setter TargetName="FilterIcon" Property="Stroke" Value="#005A9E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CanFilter, RelativeSource={RelativeSource TemplatedParent}}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                                
                                <Thumb x:Name="PART_ResizeGrip"
                                       Grid.Column="2"
                                       HorizontalAlignment="Right"
                                       Width="4"
                                       Cursor="SizeWE"
                                       Opacity="0"
                                       Margin="0,0,-2,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover state for the whole header cell -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HeaderBorder" Property="Background" Value="#EEEEEE" />
                                <!-- Make buttons fully visible on hover -->
                                <Setter TargetName="PART_SortButton" Property="Opacity" Value="1" />
                                <Setter TargetName="PART_FilterButton" Property="Opacity" Value="1" />
                            </Trigger>
                            
                            <!-- Make active buttons fully visible -->
                             <Trigger Property="SortDirection" Value="Ascending">
                                <Setter TargetName="PART_SortButton" Property="Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="SortDirection" Value="Descending">
                                <Setter TargetName="PART_SortButton" Property="Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="IsFiltered" Value="True">
                                <Setter TargetName="PART_FilterButton" Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Easy Use Demo" FontSize="20" FontWeight="Bold" Margin="10"/>

        <TabControl Grid.Row="1" Margin="10">
            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <StackPanel Margin="20">
                    <TextBlock Text="Decimal Places:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="{Binding DecimalPlaces}" 
                                   Width="50" FontSize="16" VerticalAlignment="Center" 
                                   TextAlignment="Center" FontWeight="Bold"
                                   Background="#DDDDDD" Padding="5"/>
                        
                        <StackPanel Orientation="Vertical" Margin="5,0,0,0">
                            <Button Content="▲" Command="{Binding IncrementDecimalsCommand}" Width="30" Height="15" FontSize="8"/>
                            <Button Content="▼" Command="{Binding DecrementDecimalsCommand}" Width="30" Height="15" FontSize="8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Text="Grouping:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="1: " VerticalAlignment="Center" Width="20"/>
                        <ComboBox ItemsSource="{Binding AvailableColumns}" SelectedItem="{Binding SelectedGroup1}" Width="120" Margin="0,0,10,0"/>
                        
                        <TextBlock Text="2: " VerticalAlignment="Center" Width="20"/>
                        <ComboBox ItemsSource="{Binding AvailableColumns}" SelectedItem="{Binding SelectedGroup2}" Width="120" Margin="0,0,10,0"/>
                        
                        <TextBlock Text="3: " VerticalAlignment="Center" Width="20"/>
                        <ComboBox ItemsSource="{Binding AvailableColumns}" SelectedItem="{Binding SelectedGroup3}" Width="120"/>
                    </StackPanel>
                    <TextBlock Text="Select columns to group by. Order matters." FontStyle="Italic" Foreground="Gray" FontSize="10"/>

                    <TextBlock Text="Note: Use buttons to adjust decimal places (0-5)." FontStyle="Italic" Foreground="Gray" Margin="0,20,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- Grid Tab -->
            <TabItem Header="Grid">
                <av:AdvancedGrid ItemsSource="{Binding People}"
                                 SelectionMode="Extended"
                                 CanUserSort="True"
                                 CanUserFilter="True"
                                 CanUserReorderColumns="True"
                                 CanUserResizeColumns="True"
                                 DoubleFormat="{Binding GlobalDoubleFormat}"
                                 GroupDescriptions="{Binding GroupDescriptors}">
                    <av:AdvancedGrid.Columns>
                        <!-- Text Column -->
                        <col:TextColumn Header="Name" 
                                        Binding="Name" 
                                        HeaderToolTip="Full name of the person"
                                        Width="150"/>
                        
                        <!-- Double Column -->
                        <col:DoubleColumn Header="Age" 
                                          Binding="Age" 
                                          HeaderToolTip="Current age in years"
                                          Width="60"
                                          StringFormat="N0"/>

                        <!-- New Performance Score Column (Uses Global Format) -->
                        <col:DoubleColumn Header="Performance" 
                                          Binding="PerformanceScore" 
                                          Width="100"/>
                                          
                        <!-- Double Column with Currency -->
                        <col:DoubleColumn Header="Salary" 
                                          Binding="Salary" 
                                          HeaderToolTip="Annual base salary in USD"
                                          Width="100"/>

                        <!-- CheckBox Column -->
                        <col:CheckBoxColumn Header="Active" 
                                            Binding="IsActive" 
                                            Width="60"/>

                        <!-- ComboBox Column -->
                        <col:ComboBoxColumn Header="Role" 
                                            Binding="Role" 
                                            ItemsSource="{Binding Data.Roles, Source={StaticResource Proxy}}"
                                            Width="120"/>

                        <!-- Button Column -->
                        <col:ButtonColumn Header="Bio" 
                                          ButtonContent="View"
                                          Command="{Binding ShowBioCommand}"
                                          Width="80"
                                          CanSort="False"
                                          CanFilter="False"/>

                        <!-- Icon Button Column (Edit) -->
                        <col:IconButtonColumn Header="Edit"
                                              IconData="{x:Static col:IconButtonColumn.EditIcon}"
                                              Command="{Binding ApproveCommand}"
                                              ToolTipText="Edit user"
                                              Width="50"
                                              CanSort="False" 
                                              CanFilter="False"/>

                        <!-- Icon Button Column (Delete) -->
                        <col:IconButtonColumn Header="Delete"
                                              IconData="{x:Static col:IconButtonColumn.DeleteIcon}"
                                              Command="{Binding DeleteCommand}"
                                              IconFill="Red"
                                              IconHoverFill="DarkRed"
                                              ToolTipText="Delete user"
                                              Width="60"
                                              CanSort="False"
                                              CanFilter="False"/>

                        <!-- Text Button Column -->
                        <col:TextButtonColumn Header="Status"
                                              Binding="Name"
                                              ButtonContent="Approve"
                                              Command="{Binding ApproveCommand}"
                                              ButtonPosition="Right"
                                              ButtonWidth="70"
                                              Width="180"
                                              CanSort="False"
                                              CanFilter="False"/>
                                              
                    </av:AdvancedGrid.Columns>
                </av:AdvancedGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
